--- 
import Layout from '../layouts/Layout.astro';
import Interest from '../components/interest.astro';
import Social from '../components/social.astro';
import InfoPopup from '../components/info_popup.astro';
import { getCollection, getEntry } from 'astro:content';
const socials_collection = await getCollection("socials");
const socials = socials_collection.map((social) => social.data).sort((a, b) => a.rank - b.rank);
---

<Layout>
	<main>
	<p class="head">dis_da_mør</p>
		<p class="text-sub">
			Hi I'm mør
			<InfoPopup text="arabic: مُر, romanized: mor"/>
			, I have an interest in:
		</p>
		<div class="row mx-2 d-flex justify-content-center gap-3 mt-2">
				<Interest name="code" description="programming computers" icon_name="code"/>
				<Interest name="music" description="electric guitar and electronic music" icon_name="music"/>
				<Interest name="art" description="drawing, digital or physical" icon_name="brush"/>
		  </div>
		<p class="text-sub mt-3">
			You can find me on:
		</p>
		<div class="row d-flex justify-content-center gy-3">
			{
				socials.map((social) => {
					return (<Social link={social.link} icon_name={social.icon_name} name={social.name}/>);
				})
			}
		</div>
	<div class="border-top mt-5">
	    <div class="container text-md-start mt-2">	
			<div class="row text-center mb-3">
				<a href="https://github.com/dis-da-mor/personal_site">source</a>
			</div>
			<div class="row text-center mb-3 justify-content-center">
				<div class="col-sm-auto">
					<a href="/LICENSE.md">CC BY-NC-SA 4.0</a></span>
				</div>
				<div class="col-sm-auto">
				<span>
					<InfoPopup text="feel free to share and adapt, as long as you don't use this for commercial purposes, attribute me, release under the same license, and add no additional restrictions"/>
				</span>
				</div>
		</div>
		</div>
	</div>
</main>
</Layout>

